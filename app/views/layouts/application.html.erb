<!DOCTYPE html>
<html>
<head>
  <title>ARP Spreadsheet Generator</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">ARP Spreadsheet Automator Generator</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Spreadsheets', spreadsheets_path %></li>
        <li><%= link_to 'Mass Lines', "#" %></li>
        <li><%= link_to 'ARPs', arps_path %></li>
      </ul>
      <%= form_for Spreadsheet.new, html: { class: 'navbar-form navbar-right' } do |f| %>
        <div class="form-group">
               <%= f.file_field :file, class: 'form-control' %>
              <%= f.text_field :batch_id, placeholder: 'Batch ID#', class: 'form-control' %>
              <%= f.submit 'Create' %>
        </div>
      <% end %>
    </div>
  </div>
</nav>

<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong>Hooray!</strong> <%= flash[:notice] %>
    </div>
<% end %>

<% if flash[:error] %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong>Warning!</strong> <%= flash[:error] %>
    </div>
<% end %>

<%= yield %>

</body>
</html>
